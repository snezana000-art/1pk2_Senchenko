<Window x:Class="Schooll.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="School - Академия Будущего" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F0F8FF">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#1E90FF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <Style TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#B0C4DE"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,5,0,10"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#2F4F4F"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#2F4F4F"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>

        <Style TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Name="Border" Background="#E6F2FF" 
                                BorderBrush="#B0C4DE" BorderThickness="1,1,1,0" 
                                CornerRadius="5,5,0,0" Margin="2,0">
                            <ContentPresenter x:Name="ContentSite"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                ContentSource="Header"
                                Margin="10,5"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#1E90FF"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#1E90FF"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ListView">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#B0C4DE"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        
        <Border Grid.Row="0" Background="#1E90FF" Padding="20" CornerRadius="0,0,10,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="🎓" FontSize="32" Margin="0,0,15,0" VerticalAlignment="Center"/>
                <StackPanel>
                    <TextBlock Text="SCHOOL" 
                             FontSize="32" 
                             FontWeight="Bold" 
                             Foreground="White"
                             HorizontalAlignment="Center"/>
                    <TextBlock Text="Школьный портал"
                             FontSize="16"
                             Foreground="White"
                             HorizontalAlignment="Center"
                             Margin="0,-5,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <TabControl Grid.Row="1" Margin="20" BorderThickness="0">
            <TabItem Header="🏠 Главная">
                <Border Background="White" CornerRadius="10" Padding="20" Margin="10">
                    <StackPanel>
                        <TextBlock Text="Добро пожаловать в Академию Будущего!" 
                                 FontSize="20" FontWeight="Bold" Foreground="#1E90FF"
                                 Margin="0,0,0,20" TextAlignment="Center"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
                            <Border Background="#E6F2FF" CornerRadius="10" Padding="15" Margin="10" Width="200">
                                <StackPanel>
                                    <TextBlock Text="👩‍🎓👨‍🎓🧑‍🎓" FontSize="24" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding StudentsCount}" FontSize="28" FontWeight="Bold" 
                                             Foreground="#1E90FF" HorizontalAlignment="Center"/>
                                    <TextBlock Text="учеников" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <Border Background="#E6F2FF" CornerRadius="10" Padding="15" Margin="10" Width="200">
                                <StackPanel>
                                    <TextBlock Text="📝📚📒💼" FontSize="24" HorizontalAlignment="Center"/>
                                    <TextBlock Text="11" FontSize="28" FontWeight="Bold" 
                                             Foreground="#1E90FF" HorizontalAlignment="Center"/>
                                    <TextBlock Text="классов" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <TextBlock Text="Возможности системы:" 
                                 FontSize="16" FontWeight="Bold" Margin="0,30,0,10"
                                 Foreground="#2F4F4F"/>

                        <StackPanel Margin="20,10">
                            <TextBlock Text="• 📝 Добавление и редактирование учеников"/>
                            <TextBlock Text="• 🔍 Быстрый поиск по базе данных"/>
                            <TextBlock Text="• 📋 Просмотр всех учащихся"/>
                            <TextBlock Text="• 📊 Формирование отчетов"/>
                            <TextBlock Text="• 👥 Учет данных родителей"/>
                        </StackPanel>

                        <TextBlock Text="Schooll - современная система управления школьными данными" 
                                 FontStyle="Italic" Foreground="#4682B4" 
                                 HorizontalAlignment="Center" Margin="0,30,0,0"/>
                    </StackPanel>
                </Border>
            </TabItem>

            <TabItem Header="➕ Добавить ученика">
                <ScrollViewer>
                    <Border Background="White" CornerRadius="10" Padding="30" Margin="10">
                        <StackPanel>
                            <TextBlock Text="Добавление нового ученика" 
                                     FontSize="20" FontWeight="Bold" Foreground="#1E90FF"
                                     Margin="0,0,0,20" TextAlignment="Center"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,15,0">
                                    <Label Content="ФИО ученика:"/>
                                    <TextBox x:Name="txtFullName"/>

                                    <Label Content="Дата рождения (дд.мм.гггг):"/>
                                    <TextBox x:Name="txtBirthDate"/>

                                    <Label Content="Класс:"/>
                                    <TextBox x:Name="txtClass"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="15,0,0,0">
                                    <Label Content="ФИО родителя:"/>
                                    <TextBox x:Name="txtParentName"/>

                                    <Label Content="Телефон родителя:"/>
                                    <TextBox x:Name="txtParentPhone"/>

                                    <Label Content="Примечания:"/>
                                    <TextBox x:Name="txtNotes" Height="60" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Grid>

                            <Button Content="➕ Добавить ученика" 
                                  Click="AddStudent_Click" 
                                  Background="#32CD32"
                                  Margin="0,20" Height="40" FontSize="16"/>
                        </StackPanel>
                    </Border>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="👥 Все ученики">
                <Border Background="White" CornerRadius="10" Padding="20" Margin="10">
                    <StackPanel>
                        <TextBlock Text="Список всех учащихся" 
                                 FontSize="20" FontWeight="Bold" Foreground="#1E90FF"
                                 Margin="0,0,0,20" TextAlignment="Center"/>

                        <ListView x:Name="studentsListView" Height="400">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="ФИО" Width="200" DisplayMemberBinding="{Binding FullName}"/>
                                    <GridViewColumn Header="Дата рождения" Width="120" DisplayMemberBinding="{Binding BirthDate}"/>
                                    <GridViewColumn Header="Класс" Width="80" DisplayMemberBinding="{Binding Class}"/>
                                    <GridViewColumn Header="Родитель" Width="180" DisplayMemberBinding="{Binding ParentName}"/>
                                    <GridViewColumn Header="Телефон" Width="150" DisplayMemberBinding="{Binding ParentPhone}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>

                        <Button Content="🔄 Обновить список" Click="RefreshList_Click" Margin="0,20"/>
                    </StackPanel>
                </Border>
            </TabItem>

            <TabItem Header="🔍 Поиск ученика">
                
                <Border Background="White" CornerRadius="10" Padding="20" Margin="10">
                    <StackPanel>
                        <TextBlock Text="Поиск ученика" 
                                 FontSize="20" FontWeight="Bold" Foreground="#1E90FF"
                                 Margin="0,0,0,20" TextAlignment="Center"/>

                        <TextBox x:Name="txtSearch" Height="40" FontSize="16" 
                               Text="Введите ФИО для поиска..."/>

                        <Button Content="🔍 Найти" Click="SearchStudent_Click" Height="40" FontSize="16"/>

                        <TextBlock Text="Результаты поиска:" FontWeight="Bold" Margin="0,20,0,10"
                                 Foreground="#2F4F4F"/>

                        <ListView x:Name="searchResultsListView" Height="200">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="ФИО" Width="200" DisplayMemberBinding="{Binding FullName}"/>
                                    <GridViewColumn Header="Класс" Width="80" DisplayMemberBinding="{Binding Class}"/>
                                    <GridViewColumn Header="Родитель" Width="180" DisplayMemberBinding="{Binding ParentName}"/>
                                    <GridViewColumn Header="Телефон" Width="150" DisplayMemberBinding="{Binding ParentPhone}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </StackPanel>
                </Border>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
    