<Window x:Class="SoftCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="пикми калькулятор"
        Height="450" Width="350"
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize"
        Background="#FFF9F5F0">

    <Window.Resources>
        <Color x:Key="Bordeaux">#7D1D3F</Color>
        <Color x:Key="SoftOrange">#FFB347</Color>
        <Color x:Key="LightOrange">#FFD3A2</Color>
        <Color x:Key="Cream">#FFF9F5</Color>

        <SolidColorBrush x:Key="BordeauxBrush" Color="{StaticResource Bordeaux}"/>
        <SolidColorBrush x:Key="SoftOrangeBrush" Color="{StaticResource SoftOrange}"/>
        <SolidColorBrush x:Key="LightOrangeBrush" Color="{StaticResource LightOrange}"/>
        <SolidColorBrush x:Key="CreamBrush" Color="{StaticResource Cream}"/>

        <Style x:Key="NumberButton" TargetType="Button">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontFamily" Value="Segoe UI Light"/>
            <Setter Property="Foreground" Value="{StaticResource BordeauxBrush}"/>
            <Setter Property="Background" Value="{StaticResource CreamBrush}"/>
            <Setter Property="BorderBrush" Value="#FFE0C9B8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFEEE0D5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFE0C9B8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="OrangeButton" TargetType="Button" BasedOn="{StaticResource NumberButton}">
            <Setter Property="Background" Value="{StaticResource SoftOrangeBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF9B5E2A"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFD18D3D"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF9B5E2A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BordeauxButton" TargetType="Button" BasedOn="{StaticResource NumberButton}">
            <Setter Property="Background" Value="{StaticResource BordeauxBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#5A142C"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#8F2447"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#5A142C"/>
                </Trigger>
            </Style.Triggers>
        </Style>


        <Storyboard x:Key="SoftClickAnimation">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)">
                <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="0.96"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="1.0"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)">
                <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="0.96"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="1.0"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="47*"/>
            <ColumnDefinition Width="303*"/>
        </Grid.ColumnDefinitions>

        <Rectangle Opacity="0.05" Grid.ColumnSpan="2">
            <Rectangle.Fill>
                <VisualBrush TileMode="Tile" Viewport="1,1,30,30" ViewportUnits="Absolute">
                    <VisualBrush.Visual>
                        <Path Data="M25,0 L50,25 L25,50 L0,25 Z" Fill="#FFB6C1"/>
                    </VisualBrush.Visual>
                </VisualBrush>
            </Rectangle.Fill>
        </Rectangle>

        <Grid Margin="20,30,20,30" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" 
                    Background="{StaticResource CreamBrush}" 
                    CornerRadius="15"
                    Padding="20,15"
                    Margin="0,0,0,25"
                    BorderBrush="#FFE0C9B8"
                    BorderThickness="1">
                <Grid>
                    <TextBlock x:Name="HistoryText" 
                               HorizontalAlignment="Right"
                               VerticalAlignment="Top"
                               FontSize="16"
                               FontFamily="Segoe UI Light"
                               Foreground="#7D1D3F80"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="Display" 
                             FontSize="36"
                             FontFamily="Segoe UI Light"
                             Foreground="{StaticResource BordeauxBrush}"
                             Background="Transparent"
                             BorderThickness="0"
                             IsReadOnly="True"
                             TextAlignment="Right"
                             VerticalContentAlignment="Center"
                             Padding="0"/>
                </Grid>
            </Border>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Content="C" Grid.Row="0" Grid.Column="0" 
                        Style="{StaticResource BordeauxButton}"
                        Click="Clear_Click"/>
                <Button Content="CE" Grid.Row="0" Grid.Column="1" 
                        Style="{StaticResource BordeauxButton}"
                        Click="Backspace_Click"/>
                <Button Content="√" Grid.Row="0" Grid.Column="2" 
                        Style="{StaticResource OrangeButton}"
                        Click="Sqrt_Click"/>
                <Button Content="/" Grid.Row="0" Grid.Column="3" 
                        Style="{StaticResource OrangeButton}"
                        Click="Operation_Click"/>

                <Button Content="7" Grid.Row="1" Grid.Column="0" 
                        Style="{StaticResource NumberButton}"
                        Click="Number_Click"/>
                <Button Content="8" Grid.Row="1" Grid.Column="1" 
                        Style="{StaticResource NumberButton}"
                        Click="Number_Click"/>
                <Button Content="9" Grid.Row="1" Grid.Column="2" 
                        Style="{StaticResource NumberButton}"
                        Click="Number_Click"/>
                <Button Content="×" Grid.Row="1" Grid.Column="3" 
                        Style="{StaticResource OrangeButton}"
                        Click="Operation_Click"/>

                <Button Content="4" Grid.Row="2" Grid.Column="0" 
                        Style="{StaticResource NumberButton}"
                        Click="Number_Click"/>
                <Button Content="5" Grid.Row="2" Grid.Column="1" 
                        Style="{StaticResource NumberButton}"
                        Click="Number_Click"/>
                <Button Content="6" Grid.Row="2" Grid.Column="2" 
                        Style="{StaticResource NumberButton}"
                        Click="Number_Click"/>
                <Button Content="-" Grid.Row="2" Grid.Column="3" 
                        Style="{StaticResource OrangeButton}"
                        Click="Operation_Click"/>

                <Button Content="1" Grid.Row="3" Grid.Column="0" 
                        Style="{StaticResource NumberButton}"
                        Click="Number_Click"/>
                <Button Content="2" Grid.Row="3" Grid.Column="1" 
                        Style="{StaticResource NumberButton}"
                        Click="Number_Click"/>
                <Button Content="3" Grid.Row="3" Grid.Column="2" 
                        Style="{StaticResource NumberButton}"
                        Click="Number_Click"/>
                <Button Content="+" Grid.Row="3" Grid.Column="3" 
                        Style="{StaticResource OrangeButton}"
                        Click="Operation_Click"/>

                <Button Content="0" Grid.Row="4" Grid.Column="0" 
                        Style="{StaticResource NumberButton}"
                        Click="Number_Click" Margin="5,5,10,5"/>
                <Button Content="." Grid.Row="4" Grid.Column="1" 
                        Style="{StaticResource NumberButton}"
                        Click="Decimal_Click" Margin="0,5,5,5"/>
                <Button Content="=" Grid.Row="4" Grid.Column="2" 
                        Style="{StaticResource OrangeButton}"
                        Click="Equals_Click" Grid.ColumnSpan="2" Margin="0,5,5,5"/>
            </Grid>
        </Grid>
    </Grid>
</Window>     